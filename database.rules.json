{
  "rules": {
    "map": {
      ".read": "auth !== null || auth === null",
      ".write": "auth !== null && auth.token.role === 'map_editor'"
    },
    "node_content": {
      ".read": "auth !== null || auth === null",
      ".write": "auth !== null && auth.token.role === 'map_editor'"
    },
    "precondition": {
      ".read": "auth !== null || auth === null",
      ".write": "auth !== null && auth.token.role === 'map_editor'"
    },
    "resources": {
      ".read": "auth !== null || auth === null",
      ".write": "auth !== null && auth.token.role === 'map_editor'"
    },
    "trash": {
      ".read": "auth !== null || auth === null",
      ".write": "auth !== null && auth.token.role === 'map_editor'"
    },
    "user_data": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}
