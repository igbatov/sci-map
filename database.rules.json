{
  "rules": {
    "map": {
      ".read": true,
      ".write": "auth !== null && root.child('user_data').child(auth.uid).child('map_editor').val() === 'true'"
    },
    "node_content": {
      ".read": true,
      ".write": "auth !== null && root.child('user_data').child(auth.uid).child('map_editor').val() === 'true'"
    },
    "node_image": {
      ".read": true,
      ".write": "auth !== null && root.child('user_data').child(auth.uid).child('map_editor').val() === 'true'"
    },
    "precondition": {
      ".read": true,
      ".write": "auth !== null && root.child('user_data').child(auth.uid).child('map_editor').val() === 'true'"
    },
    "trash": {
      ".read": true,
      ".write": false
    },
    "cmd": {
      "remove": {
        ".read": true,
        ".write": "auth !== null && root.child('user_data').child(auth.uid).child('map_editor').val() === 'true'"
      }
    },
    "user_subscription": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "user_data": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": false,
        "comment": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "pins": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "subscribe_period": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        "last_search": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        }
      }
    },
    "public_user_data": {
      "$uid": {
        ".read": true,
        ".write": "$uid === auth.uid"
      }
    }
  }
}
